{
  "settings" : {
	"number_of_shards" : 6,
	"number_of_replicas" : 0,
	"analysis": {
	  "char_filter": {
		"kaltura_whitespace_filter": {
		  "type": "pattern_replace",
		  "pattern": "(\\s+)",
		  "replacement": " "
		},
		"kaltura_special_chars_filter": {
		  "type": "mapping",
		  "mappings": [
			  "'=>",
			  "`=>",
			  "â€˜=>",
			  "^=>",
			  "~=>"
		  ]
		}
	  },
	  "tokenizer": {
		"kaltura_ngram_tokenizer": {
		  "type": "ngram",
		  "min_gram": 3,
		  "max_gram": 3,
		  "token_chars": [
			"letter",
			"digit"
		  ]
		}
	  },
	  "analyzer": {
		"kaltura_ngrams": {
		  "type": "custom",
		  "tokenizer": "kaltura_ngram_tokenizer",
		  "char_filter": ["kaltura_special_chars_filter"],
		  "filter": ["lowercase"]
		},
		"kaltura_keyword": {
		  "type": "custom",
		  "tokenizer": "keyword",
		  "char_filter": [
			"kaltura_whitespace_filter"
		  ],
		  "filter": [
			"lowercase",
			"trim",
			"asciifolding"
		  ]
		},
		"kaltura_text" : {
		  "tokenizer" : "standard",
		  "char_filter": ["kaltura_special_chars_filter"],
		  "filter" : ["standard", "lowercase", "asciifolding"]
		}
	  }
	}
  },
